<%layout("/layout/boilorplatecode.ejs")%>
  <body>
    <div class="row"mt-3>
      <div class="col-8 offset-2">

        <h1><%= listing.title %></h1>
     
      </div>
  <div class="card col-6 offset-2 listing-card">
      <img src = "<%=listing.image%>" class="card-img-top show-img" alt="Listing-image">
     
      <div class="card-body">
        
        <p class="card-text">
          
          <br>
          <%= listing.description %>
          <br>
          &#8377; <%= listing.price.toLocaleString("en-IN") %>
          <br>
          <%= listing.location %>
          <br>
          <%= listing.country %>
          <br>
        </p>
        
      </div>

      <div class="btns">
        
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-2 ">Edit</a>
    <br /><br />
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
    
  </div>
  <hr>

  
  <div class="col-8 offset-3">
    <h4>Leave a Review</h4>
    <form action="/listing/<%= listing.id %>/reviews" method="post" novalidate="needs-validation">
      <div class="mt-3 mb-3"> 
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]">

      </div>
      <div class
      mt-3 mb-3>
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
        <div class="invalid-feedback">
          Please Add some Comments for Review
        </div>
      </div>
      <button>Submit</button>
    </form>
    <hr>
    <h4>All Reviews</h4>
<div class="row">
  <ul>
    <% for(review of listing.reviews){%>
      <div class="card col-5 mb-5 ms-3">
        <div class="card-body">
          <h5 class="card-title">Sambit</h5>
          <p class="card-text"><%=review.comment%></p>
          <p class="card-text"><%=review.rating%>stars</p>
        
        </div>
        <form class="mb-3" method="post" action="/listings/<%=listing._id%>/reviews/<%= review._id%>?_method=DELETE">
          <button class="btn ml-2 btn-m btn-dark c-white"></button>
        </form>
      </div>
      <%}%>
   </ul>
  </div>

    
  </div>
</div>

  </body>
